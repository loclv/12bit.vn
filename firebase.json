{
  "hosting": [
    {
      "target": "blog",
      "public": "public/blog",
      "headers": [
        {
          "source": "**/*.@(jpg|jpeg|gif|png|js|css)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=31536000"
            }
          ]
        },
        {
          "source": "service-worker.js",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache"
            }
          ]
        }
      ]
    },
    {
      "target": "til",
      "public": "public/til"
    }
  ]
}
